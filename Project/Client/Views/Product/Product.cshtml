    <h1 class="text-center" style="font-family: 'Roboto', 'Segoe UI', sans-serif;">Orther Product</h1>
    <div class="row mt-3">
        <div class="col-md-2">
            <div class="m-3">
                <h4 class="mt-3">Filters</h4>
                <hr>
                <!-- -------------------------------------------------------------------------------------------------------------------------------------------------- -->
                <!-- Price Filter -->
                <div class="mb-4">
                    <h5>Price</h5>
                    <input type="range" class="form-range" min="0" max="500" id="priceRange">
                    <p>Price: <span id="priceValue">$0 - $500</span></p>
                </div>

                <!-- Category Filter -->
                <div class="mb-4">
                    <h5>Category</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Action" id="actionCheck">
                        <label class="form-check-label" for="actionCheck">Action</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Adventure" id="adventureCheck">
                        <label class="form-check-label" for="adventureCheck">Adventure</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="RPG" id="rpgCheck">
                        <label class="form-check-label" for="rpgCheck">RPG</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Simulation" id="simulationCheck">
                        <label class="form-check-label" for="simulationCheck">Simulation</label>
                    </div>
                </div>

                <!-- Platform Filter -->
                <div class="mb-4">
                    <h5>Platform</h5>
                    <select class="form-select">
                        <option value="">Select Platform</option>
                        <option value="PC">PC</option>
                        <option value="PlayStation">PlayStation</option>
                        <option value="Xbox">Xbox</option>
                        <option value="Nintendo">Nintendo</option>
                    </select>
                </div>

                <!-- Release Date Filter -->
                <div class="mb-4">
                    <h5>Release Date</h5>
                    <input type="date" class="form-control">
                </div>

                <!-- Status Filter -->
                <div class="mb-4">
                    <h5>Status</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" id="statusReleased" value="Released">
                        <label class="form-check-label" for="statusReleased">Released</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" id="statusUpcoming" value="Upcoming">
                        <label class="form-check-label" for="statusUpcoming">Upcoming</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" id="statusInDevelopment" value="In Development">
                        <label class="form-check-label" for="statusInDevelopment">In Development</label>
                    </div>
                </div>

                <button class="btn btn-primary w-100">Apply Filters</button>
            </div>
        </div>
