@using Client.Models.OrderModel
@model CartModel








<style>
    body {
        background-color: #eeecec;
    }

    .custom-bg-light {
        background-color: #f8f9fa; /* Màu xám nhạt */
    }

    .payment-icon {
        width: 35px; /* Kích thước của hình ảnh logo */
        height: 35px; /* Kích thước của hình ảnh logo */
        object-fit: contain; /* Đảm bảo hình ảnh không bị méo mó */
    }

    .img-thumbnail {
        width: 100px; /* Kích thước của hình ảnh logo */
        height: 100px; /* Kích thước của hình ảnh logo */
        object-fit: contain; /* Đảm bảo hình ảnh không bị méo mó */
    }
</style>


<div class="container mt-5">
    <div class="row">
        <!-- Your Order Section -->
        <div class="col-lg-7">
            <h5 class="fw-bold text-success"><i class="fas fa-user"></i>YOUR ORDER</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="custom-bg-light mt-3 shadow-sm border">
                <div class="d-flex align-items-center">
                    <img src="~/Image/avatar.jpeg" alt="Resident Evil 2" class="p-2 me-3" style="width:100px; height100px;" />
                    <div>
                        <p class="mb-0 fw-bold">Resident Evil 2</p>
                       @*  <a href="#" class="text-muted">Move to wishlist</a> | *@
                        <a href="#" class="text-muted">Remove</a>
                    </div>
                    <div class="ms-auto fw-bold p-3">12 000 vnđ</div>
                </div>
            </div>

            <div class="custom-bg-light p-3 shadow-sm">
                <div class="d-flex justify-content-between">
                    <p class="mb-0 text-secondary">All prices include VAT if applicable.</p>
                    <div class="fw-bold">ORDER TOTAL: 12 000 vnđ</div>
                </div>
            </div>
        </div>
        <!-- Your Payment & Gifting Details Section -->
        <div class="col-lg-5">
            <h5 class="fw-bold text-success"><i class="fas fa-user"></i>YOUR PAYMENT & GIFTING DETAILS</h5>
            
            <div class="custom-bg-light p-3 mt-3 shadow-sm border">
                <!-- Wallet Payment Method -->
                <div class="form-check text-secondary  d-flex align-items-center">
                    <input type="radio" id="wallet" name="payment" class="form-check-input">
                    <label for="wallet" class="form-check-label d-flex align-items-center">
                        <img src="~/image/wallet.jpg" class=" mx-3 payment-icon me-2" />
                        Use Wallet Funds (Balance $0.00)
                    </label>
                </div>
            </div>

            <div class="custom-bg-light p-3 d-flex shadow-sm border fw-bold">
                <a href="#" class="text-muted">Purchase more Wallet funds & learn more</a>
            </div>

           @*  <div class="custom-bg-light p-3 mt-3 shadow-sm border">
                <!-- Credit Card Payment Method -->
                <div class="form-check text-secondary">
                    <input type="radio" id="credit" name="payment" class="form-check-input">
                    <label for="credit" class="form-check-label d-flex align-items-center">
                        <img src="~/image/visa.jpg" alt="Visa Logo" class="payment-icon me-2" />
                        <img src="~/image/jcb.jpg" alt="JCB Logo" class="payment-icon me-2" />
                        CREDIT/DEBIT CARD
                    </label>
                </div>
            </div>

            <div class="custom-bg-light p-3 d-flex shadow-sm border">
                <!-- Google Pay Payment Method -->
                <div class="form-check">
                    <input type="radio" id="gpay" name="payment" class="form-check-input">
                    <label for="gpay" class="form-check-label d-flex align-items-center">
                        <img src="~/image/gpay-removebg-preview.png" alt="Google Pay Logo" class="payment-icon me-2" />
                        GOOGLE PAY
                    </label>
                </div>
            </div>

            <div class="custom-bg-light p-3 d-flex shadow-sm border">
                <!-- PayPal Payment Method -->
                <div class="form-check text-secondary">
                    <input type="radio" id="paypal" name="payment" class="form-check-input">
                    <label for="paypal" class="form-check-label d-flex align-items-center">
                        <img src="~/image/paypal.jpg" alt="PayPal Logo" class="payment-icon me-2" />
                        PAYPAL
                    </label>
                </div>
            </div> *@

            <div class="custom-bg-light p-3 shadow-sm border">
                <!-- MoMo Payment Method -->
                <div class="form-check text-secondary d-flex align-items-center">
                    <input asp-for="@Model.PaymentMethod" value="Wallet" type="radio" id="momo" name="PaymentMethod" class="form-check-input">
                    <label for="momo" class="form-check-label d-flex align-items-center">
                        <img src="~/image/Logo-MoMo-Square.webp" alt="MoMo Logo" class="mx-3 payment-icon me-2 p" />
                        MOMO
                    </label>
                </div>
            </div>
             <div class="custom-bg-light p-3 shadow-sm border">
                <!-- Payos Payment Method -->
                <div class="form-check text-secondary d-flex align-items-center">
                    <input asp-for="@Model.PaymentMethod" value="CreditCard" type="radio" id="payos" name="PaymentMethod" class="form-check-input">
                    <label for="payos" class="form-check-label d-flex align-items-center">
                        <img src="~/image/icon-payos.png" alt="payos Logo" class="mx-3 payment-icon me-2" />
                        PAY OS
                    </label>
                </div>
            </div>

            <div class="custom-bg-light p-3 mt-3 shadow-sm border">
                <!-- Gift this order Checkbox -->
                <div class="form-check text-secondary">
                    <input type="checkbox" id="gift" name="gift" class="form-check-input">
                    <label for="gift" class="form-check-label">GIFT THIS ORDER</label>
                </div>
            </div>

            <div class="custom-bg-light p-3 mt-3 shadow-sm border">
                <!-- Total and Google Pay Button -->
                <div class="d-flex align-items-center justify-content-between">
                    <h4>12 000 vnđ</h4>
                    <a class="btn btn-dark px-3 py-2 rounded-3" style="width: 200px;">
                 @*        <img src="~/image/gpay-removebg-preview.png" alt="MoMo Logo" class="me-2" style="width: 50px; height:50px" /> *@
                 Pay
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}