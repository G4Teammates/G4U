<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Information Template</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .form-control {
            background-color: rgba(255, 255, 255, 0.9); /* Màu nền trắng nhẹ */
            border: 1px solid #90EE90; /* Xanh lá nhạt */
        }
            /* Tùy chỉnh màu viền của các mục */
            .form-control:focus {
                border-color: #32CD32; /* Xanh lá cây đậm khi focus */
                box-shadow: none;
            }
        /* Gạch ngang dưới mỗi nav-item khác biệt */
        .custom-nav-item {
            border-bottom: 2px solid #0f1113;
            padding-bottom: 10px;
        }

            .custom-nav-item a {
                margin-top: 2px;
            }
    </style>
</head>
<body>
    <div class="main mt-5" style="max-width: 1150px;">
        <!-- Điều chỉnh độ rộng và thêm margin-top -->
        <div class="row justify-content-center">
            <!-- Căn giữa nội dung -->
            <!-- Sidebar -->
            <div class="col-md-4 p-3">
                <div class="d-flex align-items-center mb-3">
                    <img src="~/image/history-game-1.jpg" class="rounded me-3" alt="Avatar" style="width:70px; height:70px;" />
                    <div>
                        <h5 class="mb-0">tuandeptrai1011</h5>
                        <p class="mb-0 text-muted">tuandeptrai@gmail.com<br>10/11/2004</p>
                    </div>
                </div>

                <!-- Button Edit Profile -->
                <div class="d-grid mb-4">
                    <button class="btn btn-success fw-bold" type="button">
                        <i class="fas fa-edit me-2"></i>Edit Avatar
                    </button>
                </div>

                <ul class="nav flex-column nav-pills">
                    <li class="custom-nav-item">
                        <a class="nav-link text-black fw-bold" href="#">
                            <i class="fas fa-user"></i> User information
                        </a>
                    </li>
                    <li class="custom-nav-item">
                        <a class="nav-link text-black fw-bold" href="#">
                            <i class="fas fa-info-circle"></i> Additional Information
                        </a>
                    </li>
                    <li class="custom-nav-item">
                        <a class="nav-link text-black fw-bold" href="#">
                            <i class="fas fa-lock"></i> Password and Security
                        </a>
                    </li>
                    <li class="custom-nav-item">
                        <a class="nav-link text-black fw-bold" href="#">
                            <i class="fas fa-heart"></i> Wishlist
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Content -->
            <div class="col-md-8 p-4">
                <h3 class="fw-bold text-success"><i class="fas fa-user"></i> USER INFORMATION</h3>
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="displayName" placeholder="Display Name">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="userName" placeholder="User Name">
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="phoneNumber" placeholder="Phone Number">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control text-danger" id="status" placeholder="Offline" readonly>
                    </div>
                    <!-- Nút Cập Nhật -->
                    <button type="submit" class="btn btn-success fw-bold">
                        <i class="fas fa-save me-2"></i>Update
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
