@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập - Chợ Tốt</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"> <!-- Thêm Font Awesome -->
</head>

<body class="d-flex align-items-center justify-content-center" style="min-height: 100vh; background-image: url('/images/Bia.jpg'); background-size: contain; background-position: center; background-repeat: no-repeat;">
    <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <!-- Logo -->
            <div class="text-center mb-4">
                <a asp-controller="Home" asp-action="Index">
                    <img style="max-width: 150px;" src="~/Image/logo.png">
                </a>
            </div>

            <h3 class="text-center mb-4">Quên mật khẩu </h3>
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" id="phone" placeholder="Nhập tài khoản" required>
                </div>
                <button type="submit" class="btn btn-success w-100">Tiếp tục</button>
                <hr>
            </form>
            <div class="text-center mt-4">
                <span>Chưa có tài khoản? <a asp-controller="User" asp-action="Register" class="text-decoration-none">Đăng ký tài khoản mới</a></span>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>