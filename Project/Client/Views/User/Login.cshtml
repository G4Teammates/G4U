@{
    Layout = null;
}
@using Client.Models.AuthenModel
@model LoginRequestModel
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body, html {
            height: 100%;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .login-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            background-image: url('/image/bg01.jpg');
            background-size: cover;
            background-position: center;
        }

            .login-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.5);
                z-index: 0;
            }

        .login-box {
            position: relative;
            background-color: rgba(255, 255, 255, 0.82);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            color: white;
            z-index: 2;
        }

        .login-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .login-logo img {
                max-width: 150px; /* Thay đổi kích thước logo ở đây */
            }

        .login-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: grey;
            margin-bottom: 30px;
        }

        .login-input {
            margin-bottom: 20px;
            position: relative;
        }

            .login-input input {
                height: 45px;
                background-color: #f3f3f3;
                border: none;
            }

                .login-input input::placeholder {
                    color: #666;
                }

        .input-group-text {
            background-color: #f3f3f3;
            border: none;
            color: #666;
        }

        .login-btn {
            background-color: #00d55e;
            border: none;
            width: 100%;
            padding: 10px;
            color: whitesmoke;
            font-size: 18px;
            border-radius: 5px;
        }

            .login-btn:hover {
                background-color:forestgreen;
            }

        .text-center a {
            color: grey;
            text-decoration: none;
        }

        .text-center a:hover {
                color: #00d55e;
        }

        .form-check-label {
            color: #f3f3f3;
        }

        .login-divider {
            margin-top: 20px;
        }

        .white-background {
            padding-bottom: 10px;
        }
    </style>
    <div class="login-container">
        <div class="login-box">
            <div class="login-logo">
                <a asp-controller="Home" asp-action="Index"><img src="~/image/logo.png" alt="Logo" /></a>
            </div>
            <h2 class="login-title">Log in</h2>
            <form asp-action="Login">
                <div class="login-input input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input asp-for="UsernameOrEmail" type="text" class="form-control" placeholder="Username" required>
                </div>
                <div class="login-input input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                        <label class="form-check-label text-black-50" for="rememberMe">
                            Remember me
                        </label>
                    </div>
                    <div class="text-center">
                        <a asp-controller="User" asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </div>
                <button type="submit" asp-action="Login" class="login-btn fw-bold">Login</button>
            </form>

            <div class="white-background mt-2">
                <div class="login-divider text-center pt-2" style="color: grey;">Or login with</div>
                <div class="d-flex justify-content-center gap-2 mt-3">
                    <button type="button" class="btn btn-outline-dark d-flex align-items-center">
                        <i class="fab fa-github me-2"></i> GitHub
                    </button>
                    <button type="button" class="btn btn-outline-danger d-flex align-items-center">
                        <i class="fab fa-google me-2"></i> Google
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>