<div class="container mt-4">
	<!-- Thanh tìm kiếm và nút Thêm -->
	<div class="d-flex justify-content-between mb-3">
		<form asp-action="" class="col-md-4">
			<input class="form-control" type="text" placeholder="Search by..." />
		</form>
		<div class="w-100">
			<div class="text-end">
				<span class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button" style="width:100px">
						Status
					</button>
					<span class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<a class="dropdown-item" href="#">Action</a>
						<a class="dropdown-item" href="#">Another action</a>
						<a class="dropdown-item" href="#">Something else here</a>
					</span>
				</span>

				<span class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button">
						email confirm
					</button>
					<span class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<a class="dropdown-item" href="#">Action</a>
						<a class="dropdown-item" href="#">Another action</a>
						<a class="dropdown-item" href="#">Something else here</a>
					</span>
				</span>

				<button class="btn btn-success" data-toggle="modal" data-target="#modalUser">+ Add</button>
			</div>
		</div>
	</div>

	<!-- Bảng thông tin -->
	<div id="checkBoxBar" style="display:none">
		<div class="text-end m-2">
			@* <button class="btn btn-success mx-2 w-100">Public All</button> *@
			<a class="text-danger mx-2" data-toggle="modal" data-target="#deleteProductModal" >
				<i class="fas fa-trash"></i>
			</a>
		</div>
	</div>
	<table class="table table-bordered table-hover align-middle">
		<thead class="table-light">
			<tr>
				<th scope="col"><input type="checkbox" id="selectAll"></th> 
				<th scope="col">Avatar</th>
				<th scope="col">User Name</th>
				<th scope="col">Display Name</th>
				<th scope="col">Email</th>
				<th scope="col">Phone Number</th>
				<th scope="col">Role</th>
				<th scope="col">CreateAt</th>
				<th scope="col"></th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Users != null)
			{
				foreach (var user in Model.Users)
				{
					<tr>
						<td><input type="checkbox" class="user-checkbox" value="@user.Id" /></td>
						<td>
							@if (!string.IsNullOrEmpty(user.Avatar))
							{
								<img src="@user.Avatar" alt="Avatar" style="width: 80px; height: 80px;" />
							}
							else
							{
								<img src="~/Image/avatar.jpeg" alt="Avatar" style="width: 80px; height: 80px;" />
							}
						</td>
						<td>@user.Username</td>
						<td>@(string.IsNullOrEmpty(user.DisplayName) ? "-" : user.DisplayName)</td>
						<td>@user.Email</td>
						<td>
							<span class="text-success">@user.PhoneNumber</span>
						</td>

						<td>
							@if (user.Role == Client.Models.Enum.UserEnum.User.UserRole.Admin)
							{
								<span class="text-primary">Admin</span>
							}
							else
							{
								<span>User</span>
							}
						</td>
						<td>@DateTime.Now.ToString("dd/MM/yyyy")</td> <!-- Hiển thị ngày tham gia -->
						@*Đây là nút Update*@
						<td>
							<a asp-action="UserUpdate" asp-route-Id="@user.Id" class="text-danger mx-2"><span><i class="fa-regular fa-pen-to-square"></i></span></a>					
						</td>
						<td><button class="btn btn-success" data-toggle="modal" data-target="#modalUsers" asp-action="UserUpdate" asp-route-Id="@user.Id">+ Update</button></td>
						<td>
							@* <form asp-action="UsersDelete" >
								<input type="submit" value="Delete" class="btn btn-danger" /> 
							</form> *@
							<a asp-action="UserDelete" asp-route-Id="@user.Id" class="text-danger mx-2"> <i class="fas fa-trash"></i></a>
							@* <a asp-action="UsersDelete" asp-route-Id="@user.Id"> <i class="fas fa-trash"></i></a> *@
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="9" class="text-center">Không có người dùng nào để hiển thị.</td>
				</tr>
			}
			@* @{
				@await Component.InvokeAsync("UsersIndex")
			} *@
			@* @Html.Partial("~/Views/User/UsersIndex.cshtml") *@
			<!-- Thêm các dòng dữ liệu tương tự -->
		</tbody>
	</table>


	<!-- Phân trang -->
	<div class="d-flex justify-content-between mt-3">
		<div>Total: 3,145</div>
		<div>
			<select class="form-select form-select-sm w-auto d-inline-block">
				<option>20 records per page</option>
				<option>50 records per page</option>
				<option>100 records per page</option>
			</select>
			<nav aria-label="Page navigation example" class="d-inline-block">
				<ul class="pagination pagination-sm mb-0">
					<li class="page-item disabled">
						<a class="page-link" href="#">1 to 20</a>
					</li>
					<li class="page-item"><a class="page-link" href="#">1</a></li>
					<li class="page-item"><a class="page-link" href="#">2</a></li>
					<li class="page-item"><a class="page-link" href="#">3</a></li>
					<li class="page-item"><a class="page-link" href="#">></a></li>
				</ul>
			</nav>
		</div>
	</div>
</div>











