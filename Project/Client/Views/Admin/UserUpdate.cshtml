@model Client.Models.UserDTO.UpdateUser
@{
    ViewData["Title"] = "Update User";
}
@{
    Layout = "_LayoutAdmin";
}
<h1>Update User</h1>

<div>
    <h4>Update User Information</h4>
    <hr />
    <form asp-action="UserUpdate" method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="Username">
                @Html.DisplayNameFor(model => model.Username)
            </label>
            <div class="col-sm-10">
                <input type="text" id="Username" name="Username" class="form-control" asp-for="@Model.Username" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="PhoneNumber">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </label>
            <div class="col-sm-10">
                <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="DisplayName">
                @Html.DisplayNameFor(model => model.DisplayName)
            </label>
            <div class="col-sm-10">
                <input type="text" id="DisplayName" name="DisplayName" class="form-control" value="@Model.DisplayName" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" /> |
            <a asp-action="UsersManager" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
