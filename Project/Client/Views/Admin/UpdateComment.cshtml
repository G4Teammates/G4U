@using Client.Models.ComentDTO

@model CommentDTOModel

@{
    Layout = "_LayoutAdmin";
}
@{
    ViewData["Title"] = "Update Comment";
}
<style>
    .system-form {
        border: 1px solid #00A97F;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 12px rgba(0, 169, 127, 0.2);
    }

    .system-label {
        color: #00A97F;
        font-weight: bold;
        font-family: 'Poppins', sans-serif;
    }

    .system-input, .system-select {
        background-color: #f8f9fa;
        border: 1px solid #00A97F;
        border-radius: 4px;
        color: #333;
        font-family: 'Poppins', sans-serif;
    }

        .system-input:focus, .system-select:focus {
            border-color: #00A97F;
            box-shadow: 0 0 5px rgba(0, 169, 127, 0.5);
        }

    .system-btn {
        background-color: #00A97F;
        border: none;
        color: #fff;
        font-family: 'Poppins', sans-serif;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .system-btn:hover {
            background-color: #007f5f;
            box-shadow: 0 0 10px rgba(0, 169, 127, 0.5);
        }

</style>
<h2>Update Comment</h2>

<form asp-action="UpdateCommentConfirm" method="post" class="system-form">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Id" class="system-label">Comment ID</label>
                        <input asp-for="Id" class="form-control system-input" readonly="readonly" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Status" class="system-label">Status</label>
                        <select asp-for="Status" class="form-select system-select" aria-label="Status">
                            <option value="0">Active</option>
                            <option value="1">Inactive</option>
                            <option value="2">Block</option>
                            <option value="3">Deleted</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NumberOfLikes" class="system-label">Number of Likes</label>
                        <input asp-for="NumberOfLikes" class="form-control system-input" />
                        <span asp-validation-for="NumberOfLikes" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NumberOfDisLikes" class="system-label">Number of Dislikes</label>
                        <input asp-for="NumberOfDisLikes" class="form-control system-input" />
                        <span asp-validation-for="NumberOfDisLikes" class="text-danger"></span>
                    </div>
                </div>
            </div> 
            <div class="form-group mt-3">
                <label asp-for="Content" class="system-label">Comment Content</label>
                <textarea asp-for="Content" class="form-control system-input" rows="3"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UserName" class="system-label">User ID</label>
                        <input asp-for="UserName" class="form-control system-input" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProductId" class="system-label">Product ID</label>
                        <input asp-for="ProductId" class="form-control system-input" />
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CreatedAt" class="system-label">Created At</label>
                        <input type="date" asp-for="CreatedAt" class="form-control system-input" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UpdatedAt" class="system-label">Updated At</label>
                        <input type="date" asp-for="UpdatedAt" class="form-control system-input" />
                        <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="form-group">
                        <label asp-for="ParentId" class="system-label">Parent ID</label>
                        <input asp-for="ParentId" class="form-control system-input" />
                        <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn system-btn" style="margin-top:1.5vw;">Update</button>
</form>


@section Scripts {

    <!-- Đảm bảo tải _ValidationScriptsPartial -->
    @await Html.PartialAsync("_ValidationScriptsPartial")
}