@model Client.Models.ComentDTO.CreateCommentDTOModel

<form class="row" asp-action="CreateComment" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <div class="mb-2">
                <label asp-for="Content" class="form-label">Content</label>
                <input asp-for="Content" type="text" placeholder="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select" aria-label="Status">
                    <option value="0">Active</option>
                    <option value="1">Inactive</option>
                    <option value="2">Block</option>
                    <option value="3">Deleted</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="UserId" class="form-label">UserId</label>
                <input asp-for="UserId" type="text" placeholder="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ProductId" class="form-label">ProductId</label>
                <input asp-for="ProductId" type="text" placeholder="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ParentId" class="form-label">ParentId</label>
                <input asp-for="ParentId" type="text" placeholder="ParentId" class="form-control" />
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group mt-3 text-center">
        <input type="submit" value="Create" class="btn btn-danger w-50" />
    </div>
    <div class="form-group mt-3 text-center">
        <a href="@Url.Action("CommentManager")" class="btn btn-primary w-50">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
