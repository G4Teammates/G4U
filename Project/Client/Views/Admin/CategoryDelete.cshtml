@using Client.Models.CategorisDTO

@model CategoriesModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Confirm Delete Category";
}
<style>
    .card-header {
        background: linear-gradient(45deg, #ff4b5c, #ff0000);
        border-radius: 0.5rem 0.5rem 0 0;
    }

    .card-body {
        background-color: #f8f9fa;
        padding: 2rem;
    }

    .btn-danger {
        background-color: #ff4b5c;
        border-color: #ff0000;
    }

        .btn-danger:hover {
            background-color: #c70039;
            border-color: #900c3f;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

</style>

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Confirm Delete Category</h3>
            <p class="small mb-0">Please review the category details below before confirming deletion.</p>
        </div>
        <div class="card-body">
            <form asp-action="CategoryDeleteConfirmed" method="post">
                <!-- Category ID -->
                <div class="mb-3">
                    <label asp-for="Id" class="form-label fw-bold">Category ID</label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <!-- Category Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Type -->
                <div class="mb-3">
                    <label asp-for="Type" class="form-label fw-bold">Type</label>
                    <input asp-for="Type" class="form-control" readonly />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold">Status</label>
                    <input asp-for="Status" class="form-control" readonly />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <!-- Confirmation -->
                <div class="alert alert-warning text-center" role="alert">
                    Are you sure you want to delete category? This action cannot be undone.
                </div>
                <!-- Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="CategoriesManager" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                    @* <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button> *@
                    @* <button formaction="/Admin/UpdateCategoryConfirm" formmethod="post" class="btn btn-warning">
                        <i class="bi bi-trash"></i> Delete Mềm
                    </button> *@
                </div>
            </form>
            <form asp-action="UpdateCategoryConfirm" method="post" class="mt-3">
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="Name" value="@Model.Name" />
                <input type="hidden" name="Type" value="@Model.Type" />
                <input type="hidden" name="Description" value="@Model.Description" />
                <input type="hidden" name="Status" value="3" />
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-trash"></i> Delete Mềm
                </button>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
