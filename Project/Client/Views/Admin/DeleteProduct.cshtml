@model Client.Models.ProductDTO.ProductModel
@{
    ViewData["Title"] = "Delete Product";
}
@{
    Layout = "_LayoutAdmin";
}
<h1>Delete Product</h1>

<h3>Are you sure you want to delete this Product?</h3>
<div class="container">
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Sold</dt>
        <dd class="col-sm-10">@Model.Sold</dd>

        <dt class="col-sm-2">Interactions</dt>
        <dd class="col-sm-10">
            @if (Model.Interactions != null)
            {
                <p>Likes: @Model.Interactions.NumberOfLikes</p>
                <p>Views: @Model.Interactions.NumberOfViews</p>
            }
            else
            {
                <p>No interactions available</p>
            }
        </dd>

        <dt class="col-sm-2">Discount</dt>
        <dd class="col-sm-10">@Model.Discount</dd>

        <dt class="col-sm-2">Platform</dt>
        <dd class="col-sm-10">@Model.Platform</dd>

        <dt class="col-sm-2">Links</dt>
        <dd class="col-sm-10">
            @if (Model.Links != null && Model.Links.Any())
            {
                @foreach (var link in Model.Links)
                {
                    <a href="@link.Url" target="_blank">@link.Url</a>

                    <br />
                }
            }
            else
            {
                <p>No links available</p>
            }
        </dd>

        <dt class="col-sm-2">Categories</dt>
        <dd class="col-sm-10">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                @foreach (var category in Model.Categories)
                {
                    @category.CategoryName
                }
            }
            else
            {
                <p>No categories available</p>
            }
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">CreatedAt</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">UpdatedAt</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>

        <dt class="col-sm-2">UserName</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

    </dl>

    <form asp-action="DeleteProduct" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="ProductsManager" class="btn btn-secondary">Back to List</a>
    </form>

</div>
