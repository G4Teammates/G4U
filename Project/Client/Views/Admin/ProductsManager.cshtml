<<div class="container mt-4">
    <!-- Thanh tìm kiếm và nút Thêm -->
    <div class="d-flex justify-content-between mb-3">
        <form id="searchForm" method="get" onsubmit="return submitSearchForm();" asp-action="SearchProduct">
            <input type="text" id="searchInput" name="query" placeholder="Search products..." class="form-control" onkeydown="if(event.key === 'Enter') submitSearchForm();" />
        </form>
        <div>
            <button class="btn btn-success" data-toggle="modal" data-target="#modalProduct">+ Add</button>
        </div>
    </div>

    <div id="productList">
        @if (Model.Product != null && Model.Product.Any())
        {
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Sold</th>
                        <th>Interactions</th>
                        <th>Discount</th>
                        <th>Platform</th>
                        <th>Links</th>
                        <th>Categories</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Product)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Price</td>
                            <td>@product.Sold</td>
                            <td>@product.Interactions.NumberOfLikes / @product.Interactions.NumberOfViews</td>
                            <td>@product.Discount</td>
                            <td>@product.Platform.ToString()</td>
                            <td>
                                @if (product.Links != null && product.Links.Any())
                                {
                                    <ul>
                                        @foreach (var link in product.Links)
                                        {
                                            <li><a href="@link.Url" target="_blank">@link.Url</a></li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>None</span>
                                }
                        }

                    </td>

                    <td>@product.Status</td>
                    <td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@product.UpdatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@product.UserName</td>

                   

                    <td>
                        <a asp-action="UpdateProduct" asp-route-id="@product.Id" class="text-danger mx-2">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </a>
                    </td>
                    <td>
                        @* <form asp-action="UsersDelete" >
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    </form> *@
                        <a asp-action="ProductDelete" asp-route-Id="@product.Id" class="text-danger mx-2"> <i class="fas fa-trash"></i></a>
                        @* <a asp-action="UsersDelete" asp-route-Id="@user.Id"> <i class="fas fa-trash"></i></a> *@
                    </td>

                </tr>
            }
            <!-- Thêm các dòng dữ liệu tương tự -->

        </tbody>
    </table>


    <!-- Phân trang -->
    <div class="d-flex justify-content-between mt-3">
        <div>Total: 3,145</div>
        <div>
            <select class="form-select form-select-sm w-auto d-inline-block">
