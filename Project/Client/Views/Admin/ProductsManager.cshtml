<script>
	// Mở sidebar
	function openSidebar() {
		document.getElementById("filterSidebar").classList.add("open");
	}

	// Đóng sidebar
	function closeSidebar() {
		document.getElementById("filterSidebar").classList.remove("open");
	}
</script>










@* Modal *@
<div class="modal fade" id="modalProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="container-fluid p-5">
				<form class="row" asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="row">
						<div class="col">
							<div class="mb-2">
								<label class="form-label">Email address</label>
								<input type="email" class="form-control">
								<span class="text-danger"></span>
							</div>
							<div class="mb-2">
								<label class="form-label">Email address</label>
								<input type="email" class="form-control">
								<span class="text-danger"></span>
							</div>
							<div class="mb-2">
								<label class="form-label">Email address</label>
								<input type="email" class="form-control">
								<span class="text-danger"></span>
							</div>
						</div>
						<div class="col">
							<div class="text-center">
								<div>
									<img src="~/image/avatar.jpeg" alt="Alternate Text" style="width:200px; height200px;" />
								</div>
								<a class="btn btn-outline-dark text-center mt-2">Change Avatar</a>
							</div>
						</div>
					</div>
					<div class="form-group mt-3 text-center">
						<input type="submit" value="Create" asp-action="CreateOrder" class="btn btn-danger w-50" />
					</div>
					<div class="form-group mt-3 text-center">
						<input type="submit" value="Save" asp-action="SaveEdit" class="btn btn-primary w-50" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>