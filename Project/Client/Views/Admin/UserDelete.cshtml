@model Client.Models.UserDTO.UsersDTO

@{
    ViewData["Title"] = "UserDelete";
}
@{
    Layout = "_LayoutAdmin";
}
<h1>UserDelete</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>UserDTO</h4>
    <hr />
    <form asp-action="UserDelete">
        <input hidden asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.Status" />
        <input type="hidden" asp-for="@Model.Role" />
        <input type="hidden" asp-for="@Model.EmailConfirmation" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                <input type="text" asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-10">
                <input type="text" asp-for="Username" class="form-control" readonly />
                <span asp-validation-for="Username" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                <input type="text" asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                <input type="text" asp-for="PhoneNumber" class="form-control" readonly />   
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </dd>
        </dl>

        <input type="submit" asp-action="UserDelete" value="Delete" class="btn btn-danger"/> |
        <a asp-action="UsersManager" class="btn btn-secondary">Back to List</a>
    </form>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
