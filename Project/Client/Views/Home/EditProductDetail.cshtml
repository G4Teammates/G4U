<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Detail Template</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        #anh-bia img {
            width: 100%;
            height: 500px; /* Thay đổi để tự động điều chỉnh chiều cao */
            object-fit: cover;
            border-radius: 20px;
        }
        /* Hình ảnh và video bên trái (xếp ngang) */
        .media-container-left {
            display: flex;
            flex-wrap: wrap; /* Cho phép các phần tử xuống hàng khi cần */
            gap: 10px;
            margin: 10px 0;
        }

            .media-container-left img, .media-container-left video {
                width: 100%; /* Chiều rộng 100% của phần tử chứa */
                max-width: 250px; /* Chiều rộng tối đa */
                height: auto; /* Điều chỉnh chiều cao tự động */
                object-fit: cover;
                border-radius: 20px;
            }
        /* Hình ảnh và video bên phải (xếp dọc và căn giữa) */
        .media-container-right {
            display: flex;
            flex-direction: column;
            align-items: center; /* Căn giữa */
            gap: 10px; /* Khoảng cách giữa các phần tử */
        }

            .media-container-right img, .media-container-right video {
                width: 100%; /* Chiều rộng 100% của phần tử chứa */
                max-width: 250px; /* Chiều rộng tối đa */
                height: auto; /* Điều chỉnh chiều cao tự động */
                object-fit: cover;
                border-radius: 10px;
            }

        .game-info, .game-detail {
            padding: 20px;
            border-radius: 20px;
        }

        .game-detail {
            border-radius: 20px;
        }
            /* Chỉnh màu sắc cho các thẻ strong và a trong phần Game Detail */
            .game-detail strong {
                color: #f182d9;
            }

            .game-detail a {
                color: #00ffff;
            }
            /* Thêm nền xám cho phần Game Detail */
            .game-detail .list-group {
                background-color: #1a051e; /* Nền xám */
                padding: 10px;
            }
            /* Danh sách không sử dụng thẻ li */
            .game-detail .list-group-item {
                background-color: #1a051e;
                border: none; /* Loại bỏ viền */
                padding: 0; /* Loại bỏ padding */
            }

                .game-detail .list-group-item:not(:last-child) {
                    margin-bottom: 10px; /* Khoảng cách giữa các phần tử */
                }
        /* Tags nằm cùng với thông tin game */
        .tags {
            margin-top: 10px;
        }
        /* Nút Add to Collection */
        .btn-add-to-collection {
            font-size: 1.25rem; /* Kích thước chữ lớn hơn */
            padding: 0.75rem 1.25rem; /* Padding lớn hơn */
            border-radius: 0.375rem; /* Bo góc */
            display: block; /* Đặt nút thành block để chiều rộng 100% */
            width: 100%; /* Chiều rộng 100% của phần tử chứa */
            background-color: #e0e0e0; /* Màu nền xám nhạt */
            color: black; /* Màu chữ */
            border: 1px solid #ccc; /* Viền xám nhạt */
        }

            .btn-add-to-collection:hover {
                color: #f182d9;
                background-color: #1a051e;
            }
    </style>
</head>
<body>
    <div class="container mt-4">

        <label for="bgColorPicker">Chọn màu nền:</label>
        <input type="color" id="bgColorPicker" value="#ffffff" />

        <!-- Ảnh bìa -->
        <div class="row">
            <div class="col-12">
                <div id="anh-bia">
                    <!-- Thay thế đường dẫn ảnh bên dưới bằng ảnh của bạn -->
                    <img src="~/image/game.jpg" />
                </div>
            </div>
        </div>

        <!-- Phần thông tin game -->
        <div class="row mt-4">
            <div class="col-md-8 game-info">
                <h1 class="fw-bold">Jump Jump Frog</h1>
                <p>by YourDevPortal</p>
                <a href="#" class="btn btn-success">Download Now</a>
                <p class="mt-3">Click download now to get access to the following files:</p>
                <a href="#">Jump Jump Frog.apk</a> <span>42 MB <i class="bi bi-android2"></i></span>

                <!-- Hiển thị video và hình ảnh bên trái (xếp ngang) -->
                <div class="media-container-left mt-4">
                    <!-- Video -->
                    <video controls>
                        <source src="https://www.w3schools.com/html/mov_bbb.mp4" type="video/mp4">
                        Trình duyệt của bạn không hỗ trợ video.
                    </video>

                    <!-- Hình ảnh -->
                    <img src="~/image/game.jpg" />
                    <img src="~/image/game.jpg" />
                </div>

                <h3 class="mt-4">Description</h3>
                <p>Mô tả game sẽ được hiển thị ở đây...</p>

                <h3 class="mt-4">Comment</h3>
                <p>Bình luận của người chơi...</p>
            </div>

            <!-- Game Detail Section -->
            <div class="col-md-4 game-detail border border-secondary">
                <h4 class="fw-bold">Game Detail</h4>
                <div class="list-group">
                    <div class="list-group-item"><strong>Status:</strong> <a href="#">Released</a></div>
                    <div class="list-group-item"><strong>Author:</strong> <a href="#">yourname123</a></div>
                    <div class="list-group-item"><strong>Genre:</strong> <a href="#">Fighting</a></div>
                    <div class="list-group-item">
                        <strong>Tags:</strong>
                        <a href="#">2D</a><span class="text-white">,</span>
                        <a href="#">Casual</a><span class="text-white">,</span>
                        <a href="#">Pixel Art</a><span class="text-white">,</span>
                    </div>
                </div>

                <div class="mt-3">
                    <button class=" btn-add-to-collection fw-bold">
                        <i class="fas fa-plus"></i> Add to Collection
                    </button>
                </div>

                <!-- Hiển thị video và hình ảnh bên phải (xếp dọc và căn giữa) -->
                <div class="media-container-right mt-4">
                    <!-- Video -->
                    <video controls>
                        <source src="https://www.w3schools.com/html/mov_bbb.mp4" type="video/mp4">
                        Trình duyệt của bạn không hỗ trợ video.
                    </video>

                    <!-- Hình ảnh -->
                    <img src="~/image/game.jpg" />
                    <img src="~/image/game.jpg" />
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<script>
    const colorPicker = document.getElementById('bgColorPicker');
    const body = document.body; // Lấy phần tử body

    // Kiểm tra xem có màu được lưu trữ không và áp dụng nó
    const savedColor = localStorage.getItem('bgColor');
    if (savedColor) {
        body.style.backgroundColor = savedColor; // Áp dụng màu đã lưu cho body
        colorPicker.value = savedColor;
    }

    // Lắng nghe sự thay đổi màu sắc và lưu lại
    colorPicker.addEventListener('input', (event) => {
        const newColor = event.target.value;
        body.style.backgroundColor = newColor; // Thay đổi màu nền của body
        localStorage.setItem('bgColor', newColor); // Lưu màu vào localStorage
    });
</script>